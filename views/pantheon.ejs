<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<title>Greek Game</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>
    <% var created = user.account.created; %>
    <% if (created) { %>
    <% var splitdate = created.toString().split(" "); %>
    <% var playingSince = splitdate[1] + " " + splitdate[2] +", " + splitdate[3] %>
    <% } %>
    
    <% var god = "Zeus" %>


<div class="container">

    <a href="/create" class="btn btn-default btn-sm text-center">Create Room</a>
    <a href="/join" class="btn btn-default btn-sm text-center">Join Room</a>
    
    
	<div class="page-header text-center">
		<h1>Your Pantheon</h1>
		<h1>Images of Gods with dates you played as them here</h1>
		<table>
            <% var gods = user.log.gods; %>
            <% if (gods){ %>
                <% var splitgods = gods.toString().split(","); %>
                <% for(var i=0; i < splitgods.length; i++) { %>
                        <tr>
                        <td><%= splitgods[i] %></td>
                        </tr>
                <% } %>
            <% } %>
                            
        </table>

	</div>

	<div class="text-center">
				<h3>Your Archives</h3>

					<p>
                        <strong>Wins as Titan</strong>: <%= user.log.winsastitan %><br>
                        <strong>Wins as Olympian</strong>: <%= user.log.winsasolympian %><br>
                        <strong>Total Wins</strong>: <%= user.log.winsasolympian + user.log.winsastitan %><br>
						<strong>Name</strong>: <%= user.account.name %><br>
						<strong>Email</strong>: <%= user.account.email %><br>
						<strong>Playing Since</strong>: <%= playingSince %><br>
						
					</p>

	</div>
	<div class="text-center">
    <a href="/logout" class="btn btn-default btn-sm text-center">Logout</a>
    </div>
</div>
</body>
</html>
